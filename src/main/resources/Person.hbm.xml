<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.sreekar.hibernate.pojo.Person" table="PERSONS">
        <id name="id" column="P_ID">
            <generator class="identity"/>
        </id>
        <property name="name" column="P_NAME" length="60"/>
        <property name="age"/>
    </class>
</hibernate-mapping>

<!--two ways to use hibernate - -->
    <!--Mapping using xml files(old approach)-->
    <!--Annotations(from hibernate 3)-->
